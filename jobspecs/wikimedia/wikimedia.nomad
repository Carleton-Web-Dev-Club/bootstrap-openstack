job "cwdc-wiki" {
  datacenters = ["cwdc"]
  group "server" {
    count = 1
    
    volume "wikimedia-images" {
      type      = "csi"
      attachment_mode = "file-system"
      access_mode     = "multi-node-multi-writer"
      source    = "wikimedia-images"
    }
  
    volume "wikimedia-data" {
      type      = "csi"
      attachment_mode = "file-system"
      access_mode     = "multi-node-multi-writer"
      source    = "wikimedia-data"
    }

    network {
      port "http" {
        to = 80
      }
    }

    service {
      name = "wikimedia-fe"
      port = "http"

      tags = [
        "traefik.enable=true",
        "traefik.http.routers.wikimedia-server.rule=Host(`wiki.cwdc.cbains.ca`)",
        "traefik.http.routers.wikimedia-server.tls.certresolver=letsencrypt",
        "traefik.http.routers.wikimedia-server.entrypoints=https",
      
      ]
    }


    restart {
      attempts = 10
      interval = "5m"
      delay    = "25s"
      mode     = "delay"
    }


    task "wikimedia-server" {
      driver = "docker"
      volume_mount {
        volume      = "wikimedia-images"
        destination = "/var/www/html/images"
        read_only   = false
      }
      volume_mount {
        volume      = "wikimedia-data"
        destination = "/var/www/data"
        read_only   = false
      }

      config {
        image = "mediawiki"
        ports = ["http"]
        volumes = ["local/LocalSettings.php:/var/www/html/LocalSettings.php"]
      }

      resources {
        cpu    = 200
        memory = 200
      }
      template {
        data = <<EOF
<?php
